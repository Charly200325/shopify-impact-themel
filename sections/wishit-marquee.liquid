<div class="wishit-marquee-wrapper">
  <div class="wishit-marquee wishit-marquee1">
    {% for block in section.blocks %}
    <p>
        {% if block.settings.url != blank %} <a href='{{ block.settings.url }}' target="_blank">{% endif %}
        {{ block.settings.text }}
        {% if block.settings.url != blank %} </a>{% endif %}
    </p>
    {% endfor %}
  </div> 
  <div class="wishit-marquee wishit-marquee2">
    {% for block in section.blocks %}
    <p>
        {{ block.settings.text }}
    </p>
    {% endfor %}
  </div>
</div>
