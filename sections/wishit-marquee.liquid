        "step": 2,
        "unit": "px",
        "default": 60
      },{
        "type": "range",
        "id": "margin",
        "label": "Top/Bottom Margin",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "default": 20,
